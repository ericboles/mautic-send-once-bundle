{
    "name": "mautic/send-once-bundle",
    "description": "Ensures segment emails can only be sent once, then auto-unpublishes to prevent re-sends",
    "type": "mautic-plugin",
    "keywords": ["mautic", "plugin", "email", "broadcast", "send-once"],
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Mautic Community",
            "email": "community@mautic.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "mautic/core": "^5.0 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "MauticPlugin\\MauticSendOnceBundle\\": ""
        }
    },
    "extra": {
        "install-directory-name": "MauticSendOnceBundle"
    }
}
